{                                       每一个棋盘格装在一个字典里
    "file" : "td.json",                         文件名字
    "uniqueid" : 100001,                        重要！唯一标识
    "volNumber": 1,                                   属于哪一期
    "degree" : 5,                               难度（1~100）
    "level" : 0,                                关口号
    "category" : "诗词",                          棋盘格的类别（诗词、成语、古文、现代）
    "islocked" : 1,                              是否是解锁状态
    "star": 0,                                   完成度
    "words" : [                                      用数组保存单词
               {                                        第一个单词，是一个字典
               "desc" : "时来运转",                             词的描述
               "tmp" : "HY-",                                   用户已经填写了的信息
               "horiz" : 1,                                     是否水平：1代表水平 0代表垂直
               "x" : 1,                                         起始点x坐标（从0开始）
               "y" : 2,                                         起始点y坐标（从0开始）
               "len" : 3,                                       词的长度
               "chi" : "好运来",                                   中文答案
               "cap" : "HYL",                                   拼音首字母,注意都是大写
               "mask" : "100"                                   掩码，待定
               },
               {                                        第二个单词
               "desc" : "good boy",
               "tmp" : "D--",
               "horiz" : 0,
               "x" : 1,
               "y" : 1,
               "len" : 3,
               "chi" : "大好人",
               "cap" : "DHR",
               "mask" : "000"
               }
               ],
    "score" : 10,                               用户在这个board上的得分
    "date" : "2013-12-12",                      *下发的时间？
    "gamename" : "1",                           *游戏的名字
    "author" : "wangjz",                        *作者
    "width" : 5,                                棋盘格宽度
    "height" : 5                                棋盘格高度
}